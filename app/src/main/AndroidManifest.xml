<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.u.marketapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:replace="allowBackup"
        tools:targetApi="m">
        <activity android:name=".activity.SearchActivity"></activity>

        <service
            android:name=".chat.ChatFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.FilterActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".activity.ReplyActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".activity.CommentActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".fragment.HomeFragment"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".activity.EditActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".activity.ProductActivity"
            android:theme="@style/MaterialTheme">
            <intent-filter>
                <data
                    android:host="@string/kakaolink_host"
                    android:scheme="@string/kakao_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ViewActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name=".chat.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".setting.LocationSettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".setting.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".setting.AccountProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".signup.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".signup.AddressActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".signup.SmsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
    </application>

</manifest>
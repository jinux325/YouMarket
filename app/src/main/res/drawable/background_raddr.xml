<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <size android:height="5dp" android:width="10dp"/>

            <gradient android:angle="270" android:endColor="#97B5D1" android:startColor="#67ABE0" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <size android:height="5dp" android:width="10dp"/>

            <gradient android:angle="270" android:endColor="#B4BFC9" android:startColor="#418CC7"  />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>

</selector>

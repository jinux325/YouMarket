<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_color" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/editcolor</item>
        <item name="colorControlActivated">@color/editcolor</item>
        <item name="android:textCursorDrawable">@color/editcolor</item>
        <item name="android:textColor">@color/editcolor</item>
        <item name="android:textColorHighlight">@color/editcolor</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hintcolor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@drawable/selector_custom_check_filter</item>
        <item name="android:checked">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
    </style>

    <!--No actionbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 에러 -->
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!-- 힌트 -->
    <style name="hint_color" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hintcolor</item>
    </style>

    <!-- 선 - 상품등록 -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_30</item>
    </style>

    <!-- BottomNavigationView Active -->
    <style name="BottomNavigation.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- BottomNavigationView Inactive -->
    <style name="BottomNavigation" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- setting 스위치 -->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#f47f26</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>

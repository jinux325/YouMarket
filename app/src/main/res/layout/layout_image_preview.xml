<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_thumnail"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/empty_image_view"/>

        <ImageView
            android:id="@+id/image_view_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@id/image_view_thumnail"
            android:layout_margin="3dp"
            android:background="@drawable/background_cancel"
            android:src="@drawable/ic_cancel_24px"
            android:contentDescription="@string/empty_image_view"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>